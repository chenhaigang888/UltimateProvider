<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    >
<DirectionalLayout
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:top_margin="40vp"
    ohos:orientation="horizontal">
    <Image
        ohos:id="$+id:headImageView"
        ohos:height="30vp"
        ohos:width="30vp"
        ohos:image_src="$media:default_pic"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="10vp"
        ohos:orientation="vertical">
        <Text
            ohos:id="$+id:nickname"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:max_text_lines="1"
            ohos:text="昵称"
            ohos:text_color="#ff1e1e1e"
            ohos:text_size="15fp"/>
        <Text
            ohos:id="$+id:remark"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:max_text_lines="1"
            ohos:text="签名"
            ohos:text_color="#ff969696"
            ohos:text_size="12fp"/>
    </DirectionalLayout>
</DirectionalLayout>
    <ListContainer
        ohos:id="$+id:listContainer"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="8vp"
        ohos:bottom_margin="2vp"/>
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="11vp"
        ohos:left_margin="10vp"
        ohos:right_margin="10vp">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:orientation="horizontal">
            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:image_src="$media:love"/>
            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:left_margin="20vp"
                ohos:image_src="$media:comment"/>
            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:left_margin="20vp"
                ohos:image_src="$media:forwards"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:align_parent_right="true">
            <Image
                ohos:id="$+id:image1"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:image_src="$media:default_pic"/>
            <Image
                ohos:id="$+id:image2"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:left_margin="-10vp"
                ohos:image_src="$media:default_pic"/>
            <Image
                ohos:id="$+id:image3"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:left_margin="-10vp"
                ohos:image_src="$media:default_pic"/>
        </DirectionalLayout>
    </DependentLayout>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="13叮   1评论   0转发"
        ohos:left_padding="10vp"
        ohos:top_margin="2vp"
        ohos:right_margin="10vp"
        ohos:bottom_margin="10vp"
        ohos:text_size="12fp"/>
    <Text
        ohos:id="$+id:content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_padding="10vp"
        ohos:top_margin="2vp"
        ohos:right_margin="10vp"
        ohos:bottom_margin="10vp"
        ohos:multiple_lines="true"
        ohos:text="发布的文本内容"
        ohos:text_color="#ff1d1d1d"
        ohos:text_size="14fp"
        />
    <Text
        ohos:id="$+id:browses"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_padding="10vp"
        ohos:top_margin="2vp"
        ohos:right_margin="10vp"
        ohos:bottom_margin="10vp"
        ohos:text="1天前.142人看过"
        ohos:text_color="#ff959595"
        ohos:text_size="10fp"
        />
</DirectionalLayout>